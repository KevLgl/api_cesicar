{% extends 'base.html.twig' %}

{% block title %}Login - CesiCar-BackOffice{% endblock %}

{% block body %}
    <div class="full-screen">
        <div class="centered-container">
            <img src="{{ asset('img/logo.png') }}" alt="Logo CesiCar - application de covoiturage Ã  CESI" class="logo"/>
            <h1> BackOffice</h1>
            {% if error %}
                <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div  class="input-container">
                    <label for="username">Email</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div  class="input-container">
                    <label for="password" >Password</label>
                    <input type="password" id="password" name="_password">
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit">Se connecter</button>
            </form>
        </div>
    </div>
{% endblock %}
